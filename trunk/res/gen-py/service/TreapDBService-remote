import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import TreapDBService
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  void put(string key, string value)'
  print '  string get(string key)'
  print '   prefix(string prefixStr, i32 limit)'
  print '   kmax(i32 k)'
  print '   kmin(i32 k)'
  print '   range(string kStart, string kEnd, i32 limit)'
  print '  i32 length()'
  print '  bool remove(string key)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = TreapDBService.Client(protocol)
transport.open()

if cmd == 'put':
  if len(args) != 2:
    print 'put requires 2 args'
    sys.exit(1)
  pp.pprint(client.put(args[0],args[1],))

elif cmd == 'get':
  if len(args) != 1:
    print 'get requires 1 args'
    sys.exit(1)
  pp.pprint(client.get(args[0],))

elif cmd == 'prefix':
  if len(args) != 2:
    print 'prefix requires 2 args'
    sys.exit(1)
  pp.pprint(client.prefix(args[0],eval(args[1]),))

elif cmd == 'kmax':
  if len(args) != 1:
    print 'kmax requires 1 args'
    sys.exit(1)
  pp.pprint(client.kmax(eval(args[0]),))

elif cmd == 'kmin':
  if len(args) != 1:
    print 'kmin requires 1 args'
    sys.exit(1)
  pp.pprint(client.kmin(eval(args[0]),))

elif cmd == 'range':
  if len(args) != 3:
    print 'range requires 3 args'
    sys.exit(1)
  pp.pprint(client.range(args[0],args[1],eval(args[2]),))

elif cmd == 'length':
  if len(args) != 0:
    print 'length requires 0 args'
    sys.exit(1)
  pp.pprint(client.length())

elif cmd == 'remove':
  if len(args) != 1:
    print 'remove requires 1 args'
    sys.exit(1)
  pp.pprint(client.remove(args[0],))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
